{
  "name": "@entro314labs/mdd",
  "version": "0.0.15",
  "description": "Semantic document layer for AI-to-Office pipeline. Transform markdown into professional PDF/DOCX with preserved document structure.",
  "main": "preview.js",
  "type": "module",
  "bin": {
    "mdd-preview": "./preview.js",
    "mdd-validate": "./mdd-validate.js"
  },
  "scripts": {
    "preview": "node preview.js",
    "preview:business-letter": "node preview.js examples/business-letter.mdd",
    "preview:invoice": "node preview.js examples/invoice.mdd",
    "preview:greek": "node preview.js examples/greek-document.mdd",
    "preview:comprehensive": "node preview.js examples/comprehensive-document.mdd",
    "validate": "node mdd-validate.js",
    "validate:all": "node mdd-validate.js examples/*.mdd",
    "validate:strict": "node mdd-validate.js --strict",
    "test": "node test.js",
    "test:validation": "node test/validation-tests.js"
  },
  "keywords": [
    "markdown",
    "mdd",
    "semantic-markdown",
    "business-documents",
    "professional-documents",
    "document-generation",
    "document-validation",
    "schema-validation",
    "json-schema",
    "typescript",
    "ai-workflow",
    "markdown-to-pdf",
    "markdown-to-docx",
    "pandoc",
    "latex",
    "invoices",
    "proposals",
    "contracts",
    "letters",
    "pdf",
    "docx",
    "document-processing",
    "document-structure",
    "remark-plugin",
    "version-control",
    "plain-text",
    "chatgpt",
    "ai-content",
    "cli-tool",
    "validator"
  ],
  "author": "Dominikos Pritis <idominikos@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/entro314-labs/mdd.git"
  },
  "bugs": {
    "url": "https://github.com/entro314-labs/mdd/issues"
  },
  "homepage": "https://github.com/entro314-labs/mdd#readme",
  "dependencies": {
    "@entro314labs/remark-mdd": "^0.0.15",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "to-vfile": "^8.0.0"
  },
  "engines": {
    "node": ">=22.x"
  }
}
